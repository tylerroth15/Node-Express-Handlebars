<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="/assets/images/burger.jpg" alt="burger" width= "200px" height="200px" />
			<h1> Eat-Da-Burger! </h1>
		</div>
		<div class="col-md-6 text-center" class="addfood">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 text-center">
					<pre class="burger-color">{{this.id}}. {{this.burger_name}}
					</pre>
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default devour-burger">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task addfood">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
  <div class="col-md-4 "></div>		
  <div class="col-md-4 text-center enter_section">
    
			<form action="/burgers/create" method="POST">
     
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
         <h2>Add A Burger</h2>
				<button type="submit" class="btn btn-primary addburger" id="text-enter-button">Submit</button>
			</form>
			
	</div>
  <div class="col-md-4 "></div>		

</div>